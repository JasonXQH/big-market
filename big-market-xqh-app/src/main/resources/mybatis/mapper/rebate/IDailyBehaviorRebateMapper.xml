<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.jasonxqh.infrastructure.dao.IDailyBehaviorRebateDao">
  <resultMap id="BaseResultMap" type="io.github.jasonxqh.infrastructure.dao.po.rebate.DailyBehaviorRebate">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="behavior_type" jdbcType="VARCHAR" property="behaviorType" />
    <result column="rebate_desc" jdbcType="VARCHAR" property="rebateDesc" />
    <result column="rebate_type" jdbcType="VARCHAR" property="rebateType" />
    <result column="rebate_config" jdbcType="VARCHAR" property="rebateConfig" />
    <result column="state" jdbcType="VARCHAR" property="state" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
  </resultMap>

  <select id="queryDailyBehaviorRebateByBehaviorTypeAndRebateType" parameterType="io.github.jasonxqh.infrastructure.dao.po.rebate.DailyBehaviorRebate" resultMap="BaseResultMap">
    select behavior_type,rebate_desc,rebate_type,rebate_config,state
    from daily_behavior_rebate
    where rebate_type = #{rebateType} and behavior_type =#{behaviorType}
  </select>

  <select id="queryDailyBehaviorRebateByBehaviorType" parameterType="java.lang.String" resultMap="BaseResultMap">
    select behavior_type,rebate_desc,rebate_type,rebate_config,state
    from daily_behavior_rebate
    where behavior_type =#{behaviorType}
  </select>
</mapper>